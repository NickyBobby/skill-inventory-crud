<h1>My Skills</h1>

<a href="/skills/new">New Skill</a>


<table class="table table-hover table-condensed">
  <tr>
    <th>Number</th>
    <th>Skill</th>
    <th>Status</th>
    <th>Actions</th>
  </tr>
<% @skills.each do |skill| %>
<div>
  <h3><tr><td><%= skill.id %></td>
    <td><%= skill.name %></td>
    <td>
      <%= skill.status %>
    </td>
    <td>
      <a href="/skills/<%= skill.id %>/edit">Edit</a>
      <form action="/skills/<%= skill.id %>" method="post">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" value="Delete">
      </form>
    </td>
  </tr></h3>
</div>
<% end %>
</table>
